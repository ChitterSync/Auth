generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String   @id
  loginId            String   @unique
  username           String   @unique
  passwordHash       String   @map("password")
  emails             String?
  phones             String?
  name               String?
  gender             String?
  dob                DateTime?
  locations          String?
  pronouns           String?
  bio                String?
  website            String?
  tosAgreement       Boolean  @default(false)
  metadata           String?
  legacySource       String?
  legacyUserId       String?
  legacyUsername     String?
  legacyMetadata     String?
  emailVerifiedAt    DateTime?
  createdAt          DateTime @default(now())
  settings           UserSetting?
  sessions           Session[]
  oauthAccounts      OAuthAccount[]
  verificationTokens VerificationToken[]

  @@unique([legacySource, legacyUserId])
}

model UserSetting {
  userId     String  @id
  user       User    @relation(fields: [userId], references: [id])
  preferences String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Session {
  id          String   @id
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  refreshHash String
  userAgent   String?
  ip          String?
  lastSeenAt  DateTime?
  createdAt   DateTime @default(now())
  revokedAt   DateTime?

  @@index([userId])
}

model VerificationToken {
  id         String   @id
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  tokenHash  String
  type       String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  consumedAt DateTime?

  @@index([userId, type])
}

model OAuthAccount {
  id              String   @id
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  provider        String
  providerUserId  String
  providerEmail   String?
  createdAt       DateTime @default(now())

  @@unique([provider, providerUserId])
}
